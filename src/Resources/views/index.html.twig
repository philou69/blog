{% extends 'layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}


{% block body %}
    <div class="well">
        <h1 class="text-center">{% for content in listContent if content.title == "title_index" %}{{ content.content }}
    {% endfor %}</h1>
        <p>
            {% for content in listContent if content.title == "presentation" %}
                {{ content.content| raw }}
            {% endfor %}
        </p>
    </div>
    <div class="well">
        {% if chapitre.published_at < "now" |date('Y-m-d') %}
            <h2 class="text-center">{{ chapitre.title }}</h2>
            <p>
                {{ chapitre.title }} n'est pas encore diffuser. Vous pourrez conna√Ætre
                la suite des aventures le {{ chapitre.published_at|date('d/m/Y') }}
            </p>
        {% else %}
            <h2 class="text-center"><a href="chapitre/{{ chapitre.id }}">{{ chapitre.title }}</a></h2>
            <p>
                {{ chapitre.chapitre|slice(0,3) }}...
            </p>
        {% endif %}
    </div>
{% endblock %}