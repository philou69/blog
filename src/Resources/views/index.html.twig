{% extends 'layout.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="well">
        <h1 class="text-center">{% for content in listContent if content.title == "title_index" %}{{ content.content }}
    {% endfor %}</h1>
        <p>
            {% for content in listContent if content.title == "presentation" %}
                {{ content.content| raw }}
            {% endfor %}
        </p>
    </div>
    <div>
        <h2 class="text-center well">Les chapitres</h2>
        <ul class="list-unstyled">
            {% for chapitre in listChapitres %}
                {% if chapitre.published_at > "now"|date("Y-m-d") %}
                    <li class="well">
                        <h4>{{ chapitre.title }}</h4>

                        <p>
                            Le prochain chapitre est en cours d'écriture. Il sera diffusé le {{ chapitre.published_at| date('d/m/Y') }}.<br>
                            En attendant n'hesiter pas à lire les autres chapitres.
                        </p>
                    </li>
                {% else %}
                <li class="well">
                    <h4><a href="/chapitre/{{ chapitre.id }}">{{ chapitre.title }}</a></h4>
                        <p>
                            {{ chapitre.chapitre | slice(0,5)  }}...
                        </p>
                    <small>Paru le : {{ chapitre.published_at | date("d/m/Y") }}</small>
                </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}