        {% block stylesheets %}
        /* Margin haute au body pour descendre le contenu de la page sous la barre de navigation */
        body {
            padding-top: 80px;
        }

        {% endblock %}
    </style>
</head>
    <body>
    {# On inclue l'affichage de la navbar #}
    {% include 'navbar.html.twig' %}
    <div class="container">
        {# block body qui sera rempli sur les differents fichiers de pages #}
        {% block body %}
        {% endblock %}
    </div>
    </body>
</html>