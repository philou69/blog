{% extends "admin/layout_user.html.twig" %}

{% block title %}Liste visiteurs{% endblock %}

{% block body_user %}
    <h1 class="text-center">Les visiteurs</h1>
    <table class="table table-striped table-hover">
        <thead>
        <tr class="succes row">
            <th class="col-sm-1">id</th>
            <th class="col-sm-3">Nom</th>
            <th class="col-sm-3">Mail</th>
            <th class="col-sm-1">Roles</th>
            <th class="col-sm-1">Editer</th>
        </tr>
        </thead>
        <tbody>
        {% for user in listUser %}
            <tr class="row">
                <th class="col-sm-1">{{ user.id }}</th>
                <th class="col-sm-3">{{ user.username }}</th>
                <th class="col-sm-3">{{ user.mail }}</th>
                <th class="col-sm-1">{% for role in user.roles %}
                        {{ role }}<br/>
                    {% endfor %}</th>
                <th class="col-sm-1"><a href="/admin/user/{{ user.id }}" class="btn btn-default btn-xs"><i
                                class="glyphicon glyphicon-edit"></i></a></th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
