{% extends 'layout.html.twig' %}

{% block title %}Connection {% endblock %}

{% block body %}
    <div class="alert alert-danger">
        <h2 class="text-center"><i class="glyphicon glyphicon-warning-sicle"></i> Zone d'administration</h2>
        <p>
            Vous essayer de vous connecter à lazoned'administration du site.
            Si vous ne faites pas partis de l'administration du site, veuillez retourné à <a href="/">l'accueil</a> du site.
        </p>
    </div>
    <div class="well">
        <form action="" method="post" class="form-horizontal">
            <h1 class="text-center">Formulaire de connection</h1>
            {% for error in errors if error.error == "formulaire" %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endfor %}
            <div class="form-group">
                <label for="username" class="control-label col-sm-2">Nom : </label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="username" id="username" value="">
                </div>
                {% for error in errors if error.error == "username" %}
                    <div class="alert alert-danger col-sm-5">
                        {{ error.message }}
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <label for="password" class="control-label col-sm-2">Mot de passe :</label>
                <div class="col-sm-5">
                    <input type="password" class="form-control" name="password" id="password">
                </div>{% for error in errors if error.error == "password" %}
                <div class="alert alert-danger col-sm-5">
                    {{ error.message }}
                </div>
                {% endfor %}
            </div>
            <div class="text-center">
                <input type="submit" value="Se connecter" class="button button-s button-primary center">
            </div>
        </form>
    </div>
{% endblock %}