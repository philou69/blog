{% extends "admin/layout.html.twig" %}

{% block title %}Contenus{% endblock %}


{% block body %}
    <div class="well">
        <h1 class="text-center">Les contenus modifiables</h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr class="succes row">
                <th class="col-sm-1">id</th>
                <th class="col-sm-3">titre</th>
                <th class="col-sm-3">Contenu</th>
                <th class="col-sm-1">Page</th>
                <th class="col-sm-1">Editer</th>
            </tr>
            </thead>
            <tbody>
            {% for content in contents %}
                <tr class="row">
                    <th class="col-sm-1">{{ content.id }}</th>
                    <th class="col-sm-3">{{ content.title }}</th>
                    <th class="col-sm-3">{{ content.content | slice(0,50)| raw }}</th>
                    <th class="col-sm-1">{{  content.page }}</th>
                    <th class="col-sm-1"><a href="/admin/content/{{ content.id }}" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-edit"></i></a></th>
                </tr>
                {% else %}
                <tr>
                    <th class="text-center" colspan="5"> Aucun contenus</th>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}