{% extends "admin/layout_comment.html.twig" %}

{% block title %}Commentaires{% endblock %}

{% block body_comment %}
    <h1 class="text-center">Les commentaires</h1>
    <div id="signaled">
        <table id="comment-dataTables" class="table table-striped table-hover">
            <thead>
            <tr class="succes row">
                <th class="col-sm-4">commentaire</th>
                <th class="col-sm-2">publi√© par</th>
                <th class="col-sm-2">Date du post</th>
                <th class="col-sm-3">Etat</th>
                <th class="col-sm-1">Editer</th>
            </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr class="row">
                        <th class="col-sm-4">{{ comment.comment | slice(0,50) }}...</th>
                        <th class="col-sm-2">{{ comment.user.username }}</th>
                        <th class="col-sm-2">{{ comment.published_at | date('d/m/Y') }}</th>
                        <th class="col-sm-3">{{ comment.signaled ? "Signaler
                            par " ~ comment.signaledBy.username ~ "
                            le " ~ comment.signaledAt | date('d/m/Y') : (comment.banished ? "bani
                            par " ~ comment.signaledBy.username ~ "
                            le " ~ comment.signaledAt | date('d/m/Y') : "Normal") }}
                        </th>
                        <th class="col-sm-1"><a href="/admin/comment/edit/{{ comment.id }}"
                                                class="btn btn-default btn-xs"><i
                                        class="glyphicon glyphicon-pencil"></i></a></th>
                    </tr>
                {% else %}
                    <tr class="row">
                        <th colspan="6" class="text-center">Aucun commentaires</th>
                    </tr>
                {% endfor %}
            </tbody>

        </table>

    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" src="../../src/Resources/js/comment.dataTables.js"></script>
{% endblock %}