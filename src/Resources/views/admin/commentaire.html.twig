{% extends "admin/layout.html.twig" %}

{% block title %}Commentaire{%endblock %}

{% block commentaires %}{% include "admin/commentaires_bar.html.twig" %}{% endblock %}

{% block body %}
    <div class="well">
    {% if commentaire.signaled == true %}
        {% set etat = "signaled" %}
    {% elseif commentaire.banished == true %}
        {% set etat = "banished" %}
    {% else %}
        {% set etat = "normal" %}
    {% endif %}

        <h2>Commentaire {{ commentaire.id }}</h2>
        <form action="" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="id" class="col-sm-3 control-label">Id :</label>
                <div class="col-sm-5">
                    <input type="text" id="id" value="{{ commentaire.id }}" class="form-control" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <label for="commentaire" class="col-sm-3 control-label">Commentaire :</label>
                <div class="col-sm-5">
                    <textarea id="commentaire" class="form-control" readonly="readonly">{{ commentaire.commentaire }}</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="etat" class="col-sm-3 control-label">Etat : </label>
                <div class="col-sm-4">
                    <div class="radio">
                        <label><input type="radio" name="etat" value="normal" {% if etat == "normal"%} checked="true" {% endif %} >Normal</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="etat" value="signaled"  {% if etat == "signaled"%} checked="true" {% endif %} >Signaler</label>
                    </div>
                    <div class="radio ">
                        <label><input type="radio" name="etat" value="banished"  {% if etat == "banished"%} checked="true" {% endif %} >Banni</label>
                    </div>

                </div>
                {% for error in errors if error.error == "etat"%}
                <div class="alert alert-danger col-sm-5">
                    {{ error.message }}
                </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <label for="created_at" class="col-sm-3 control-label">Posté le :</label>
                <div class="col-sm-5">
                    <input type="date" id="created_at" value="{{ commentaire.created_at| date("Y-m-d")}}" class="form-control" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <label for="user" class="col-sm-3 control-label">publié par :</label>
                <div class="col-sm-5">
                    <input type="text" id="user" value="{{ commentaire.user.username }}" class="form-control" readonly="readonly">
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Envoyer" class="btn btn-xs btn-info">
            </div>
        </form>
    </div>
{% endblock%}